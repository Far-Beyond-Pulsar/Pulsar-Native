//! A node that linearly interpolates between two colors.

/// Linearly interpolate between two colors.
fn @[pulsar_node_fn_id]@() -> (f32, f32, f32, f32) {
    let (r1, g1, b1, a1) = @[in_a_color]@;
    let (r2, g2, b2, a2) = @[in_b_color]@;
    let t = @[in_t_number]@;
    (
        r1 + (r2 - r1) * t,
        g1 + (g2 - g1) * t,
        b1 + (b2 - b1) * t,
        a1 + (a2 - a1) * t,
    )
}